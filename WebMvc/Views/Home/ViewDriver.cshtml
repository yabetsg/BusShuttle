@model IEnumerable<WebMvc.Models.DriverViewModel>
@{
    ViewData["Title"] = "Entries";
}
<div class="py-2">
<a class="btn text-decoration-none btn-danger" asp-action="CreateDriver">New Driver</a>
</div>
<h3>Existing Drivers</h3>
<table class="table table-striped table-bordered fs-5 fw-bold">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
       
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="EditDriver" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>


