@model WebMvc.Models.BusEditModel
@{
    ViewData["Title"] = "Edit Driver";
}
<h2>Edit Loop</h2>
<a asp-action="ViewBus">Back</a>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="BusNumber" class="control-label"></label>
                <input asp-for="BusNumber" class="form-control" />
                <span asp-validation-for="BusNumber" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
