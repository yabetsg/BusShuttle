@model WebMvc.Models.BusEditModel
@{
    ViewData["Title"] = "Edit Driver";
}
<a asp-action="ViewBus">Back</a>
<div class="row d-flex flex-column align-items-center text-center gap-4">
<h2>Edit Bus</h2>
    <div class="col-md-4">
        <form asp-action="EditBus" class="form fs-4 fw-bold border d-flex flex-column gap-4 p-2 rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="BusNumber" class="control-label"></label>
                <input asp-for="BusNumber" class="form-control" />
                <span asp-validation-for="BusNumber" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
