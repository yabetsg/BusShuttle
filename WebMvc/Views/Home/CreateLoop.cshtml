@model WebMvc.Models.LoopCreateModel
@{
    ViewData["Title"] = "Create Loop";
}
<a asp-action="ViewLoop">Back</a>
<div class="row d-flex flex-column align-items-center text-center gap-4">
    <h2>Create Loop</h2>
    <div class="col-md-4">
        <form class="form fs-4 fw-bold border d-flex flex-column gap-4 p-2 rounded" asp-action="CreateLoop">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="d-flex flex-column gap-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}